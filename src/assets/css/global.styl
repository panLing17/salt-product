@import './fn.styl'
.white-bg
  background-color #ffffff
  border 1px solid #E3E3E3
  border-radius 4px
.top-card
  width 98%
  height 15.5%
  min-height 80px
  margin 0 auto
.bottom-card
  width 98%
  height 82.5%
  margin .3em auto 0
  position relative
.view-title
  font-weight bold
  color #414141
  padding-left .8em
  width 94%
  margin 0 auto
  position relative
  line-height 3em
  &:before
    content ''
    display block
    width 3px
    height .9em
    position absolute
    left 0
    top 50%
    transform translateY(-50%)
    background-color #414141
.table-button-wrap
  position relative
  font-size 0
  width 94.38%
  margin 0 auto
.table-button-single
  background-color #5F7FD9
  line-height 1
  border-radius 4px
  border 1px solid #5F7FD9
  display inline-block
  padding .3em .83em
  color #ffffff
  position absolute
  right 0
  top 50%
  transform translateY(-50%)
  cursor pointer
  user-select none
  font-weight normal
.table-header
  border 1px solid #BFBFBF
  border-bottom none
  border-collapse collapse
  width 100%
  box-sizing border-box
  table-layout fixed
  .tr
    border-bottom none
    .th
      border 1px solid #BFBFBF
      border-bottom none
      background-color #F2F2F2
      text-align center
      font-weight bold
      height 2.5em
      color #414141
.table
  border 1px solid #BFBFBF
  border-collapse collapse
  border-radius 6px
  width 100%
  box-sizing border-box
  table-layout fixed
  .tr
    border 1px solid #BFBFBF
    &:nth-of-type(1)
      border-top-left-radius 6px
    .th
      font-weight bold
      height 2.5em
      border 1px solid #BFBFBF
      background-color #F2F2F2
      text-align center
      color #414141
      &:nth-of-type(1)
        border-top-left-radius 6px
    .td
      border 1px solid #BFBFBF
      height 2.2em
      padding-left .5em
      color #414141
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
      &.center
        padding-left 0
        text-align center
      &:last-child
        overflow visible
      &.btn-wrap
        text-align center
        font-size 0
      .btn
        color #5F7FD9
        text-align center
        display inline-block
        margin-right 8px
        cursor pointer
        line-height 1
        position relative
        &:last-child
          margin 0
        i
          vertical-align middle
        span
          vertical-align middle
          margin-left .5em
        .pop-btn
          position absolute
          top 1.3em
          left 50%
          transform translateX(-50%)
          z-index 10
          .sanjiao
            width 8px
            height 8px
            transform rotate(45deg) translateX(-50%)
            border-top 1px solid #E3E3E3
            border-left 1px solid #E3E3E3
            position absolute
            top -1px
            left 50%
            background-color #ffffff
          .pop-list
            border 1px solid #E3E3E3
            border-radius 4px
            background-color #ffffff
            color #203262
            padding 0 .5em
            .pop-item
              line-height 2em
              padding 0 .5em
              white-space nowrap
              border-bottom 1px solid #E3E3E3
              &:hover
                color #5F7FD9
              &:last-child
                border none
.search-wrap
  input
    border-radius 4px
    border 1px solid #BFBFBF
    height 30px
.mask.fade-enter-active, .mask.fade-leave-active {
  transition: all 0.5s;
}
.mask.fade-enter, .mask.fade-leave-to {
  opacity: 0;
}
.mask
  position fixed
  width 100%
  height 100%
  overflow auto
  z-index 20
  top 0
  left 0
  background-color rgba(0,0,0,.5)
  .mask-scroll
    position relative
    padding 50px 0
  .mask-content-wrap
    background-color #ffffff
    position relative
    top 10%
    left 50%
    transform translateX(-50%)
    border-radius 4px
    .mask-title-wrap
      border-bottom 1px solid #E3E3E3
      .mask-title
        line-height 3.18em
        font-weight bold
        position relative
        margin 0 auto
        width 93%
        .close
          position absolute
          right 0
          top 50%
          transform translateY(-50%)
          cursor pointer
          color #BFBFBF
          font-weight normal
    .mask-content
      width 93%
      margin 0 auto
    .mask-table
      width 100%
      border 1px solid #BFBFBF
      border-collapse collapse
      margin 0 auto
      table-layout fixed
      tr
        border 1px solid #BFBFBF
        td
          border 1px solid #BFBFBF
          color #414141
          padding-left .8em
          overflow hidden
          text-overflow ellipsis
          white-space nowrap
          &.center
            padding-left 0
            text-align center
    .mask-btn-wrap
      width 93%
      margin 0 auto
      text-align right
.clear-float
  zoom:1
  &:after
    display block
    clear both
    content ""
    visibility hidden
    height 0
